            // Generate show cards
            function generateShowCards() {
                const sections = document.querySelectorAll('.shows-section');
                
                sections.forEach((section, index) => {
                    const container = section.querySelector('.shows-container');
                    let shows = [];
                    
                    if (index === 0) shows = showsData.popular;
                    else if (index === 1) shows = showsData.trending;
                    else shows = showsData.newReleases;
                    
                    shows.forEach(show => {
                        const card = document.createElement('div');
                        card.className = 'show-card';
                        card.innerHTML = `
                            <img src="${show.image}" alt="${show.title}" class="show-image">
                            <video class="show-video" loop muted>
                                <source src="${show.video}" type="video/mp4">
                            </video>
                            <div class="show-info">
                                <h3 class="show-title">${show.title}</h3>
                                <div class="show-meta">
                                    <span class="show-rating">${show.rating} <i class="fas fa-star"></i></span>
                                    <span>${show.year}</span>
                                    <span>${show.seasons} Season${show.seasons > 1 ? 's' : ''}</span>
                                </div>
                                <div class="show-buttons">
                                    <button class="show-btn"><i class="fas fa-play"></i></button>
                                    <button class="show-btn"><i class="fas fa-plus"></i></button>
                                    <button class="show-btn"><i class="fas fa-thumbs-up"></i></button>
                                </div>
                            </div>
                        `;
                        
                        container.appendChild(card);
                    });
                });
                
                // Add hover effects for video playback
                const showCards = document.querySelectorAll('.show-card');
                
                showCards.forEach(card => {
                    const video = card.querySelector('.show-video');
                    
                    card.addEventListener('mouseenter', () => {
                        video.currentTime = 0;
                        video.play().catch(e => console.log(e));
                    });
                    
                    card.addEventListener('mouseleave', () => {
                        video.pause();
                    });
                });
            }
            
            generateShowCards();
            
            // Search functionality
            const searchBox = document.querySelector('.search-box');
            const searchInput = searchBox.querySelector
                container.appendChild(card);
            });
        
        // Add hover effects for video playback
        const showCards = document.querySelectorAll('.show-card');
        
        showCards.forEach(card => {
            const video = card.querySelector('.show-video');
            
            card.addEventListener('mouseenter', () => {
                video.currentTime = 0;
                video.play().catch(e => console.log(e));
            });
            
            card.addEventListener('mouseleave', () => {
                video.pause();
            });
        });
    
    generateShowCards();
    
    // Search functionality
    const searchBox = document.querySelector('.search-box');
    const searchInput = searchBox.querySelector('input');
    const searchIcon = searchBox.querySelector('i');
    
    searchIcon.addEventListener('click', () => {
        searchBox.classList.toggle('active');
        if (searchBox.classList.contains('active')) {
            searchInput.focus();
            searchInput.style.width = '200px';
        } else {
            searchInput.style.width = '0';
        }
    });
    
    // Hero section animation
    const heroTitle = document.querySelector('.hero-title');
    const heroMeta = document.querySelector('.hero-meta');
    const heroDescription = document.querySelector('.hero-description');
    const heroButtons = document.querySelector('.hero-buttons');
    
    setTimeout(() => {
        heroTitle.style.opacity = '1';
        heroTitle.style.transform = 'translateY(0)';
    }, 300);
    
    setTimeout(() => {
        heroMeta.style.opacity = '1';
        heroMeta.style.transform = 'translateY(0)';
    }, 500);
    
    setTimeout(() => {
        heroDescription.style.opacity = '1';
        heroDescription.style.transform = 'translateY(0)';
    }, 700);
    
    setTimeout(() => {
        heroButtons.style.opacity = '1';
        heroButtons.style.transform = 'translateY(0)';
    }, 900);
</script>

