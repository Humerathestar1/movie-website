        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Floating movie logos animation
                const floatingLogos = document.getElementById('floatingLogos');
                const movieLogos = [
                    'üé¨', 'üçø', 'üìΩ', 'üé•', 'üéû', 'üë®‚Äçüé§', 'üë©‚Äçüé§', 'ü¶∏', 'ü¶π', 'üëΩ', 'ü§ñ', 'üëª',
                    'üíÉ', 'üï∫', 'üé≠', 'üé´', 'üèÜ', '‚≠ê', 'üåü', '‚ú®', 'üéû', 'üéü', 'üé¶', 'üîÆ'
                ];
                
               // Create floating logos
for (let i = 0; i < 25; i++) {
    const logo = document.createElement('div');
    logo.className = 'floating-logos';
    logo.innerHTML = movieLogos[Math.floor(Math.random() * movieLogos.length)];

    // Random position
    const posX = Math.random() * 100;
    const posY = Math.random() * 100;
    const size = Math.random() * 30 + 20;
    const delay = Math.random() * 5;
    const duration = Math.random() * 10 + 10;
    const opacity = Math.random() * 0.1 + 0.03;

    logo.style.left = `${posX}%`;
    logo.style.top = `${posY}%`;
    logo.style.fontSize = `${size}px`;
    logo.style.animationDelay = `${delay}s`;
    logo.style.animationDuration = `${duration}s`;
    logo.style.opacity = opacity;
    logo.style.animationName = 'float';
    logo.style.animationIterationCount = 'infinite';
    logo.style.animationTimingFunction = 'ease-in-out';

    floatingLogos.appendChild(logo);
}

                
               // Mouse move parallax effect
document.addEventListener('mousemove', function(e) {
    const x = e.clientX / window.innerWidth;
    const y = e.clientY / window.innerHeight;

    const logos = document.querySelectorAll('.floating-logos');
    logos.forEach((logo, index) => {
        const speedX = (index % 3) * 0.2 + 0.1;
        const speedY = (index % 2) * 0.2 + 0.1;

        const moveX = (x - 0.5) * 50 * speedX;
        const moveY = (y - 0.5) * 50 * speedY;

        logo.style.transform = `translate(${moveX}px, ${moveY}px) rotate(${moveX}deg)`;
    });
});

                
                // Glow effect on hover for social icons
                const socialIcons = document.querySelectorAll('.social-icon');
                socialIcons.forEach(icon => {
                    icon.addEventListener('mouseenter', () => {
                        icon.style.animation = 'glow 1.5s infinite';
                    });
                    
                    icon.addEventListener('mouseleave', () => {
                        icon.style.animation = '';
                    });
                });
                
                // Wave effect on newsletter input focus
const newsletterInput = document.querySelector('.newsletter-input');
newsletterInput.addEventListener('focus', () => {
    const wave = document.createElement('div');
    wave.style.position = 'absolute';
    wave.style.width = '5px';
    wave.style.height = '5px';
    wave.style.backgroundColor = 'rgba(0, 173, 239, 0.5)';
    wave.style.borderRadius = '50%';
    wave.style.pointerEvents = 'none';
    wave.style.transform = 'translate(-50%, -50%)';
    wave.style.animation = 'wave 1s ease-out forwards';

    document.body.appendChild(wave);

    function createWave(x, y) {
        const clone = wave.cloneNode();
        clone.style.left = `${x}px`;
        clone.style.top = `${y}px`;

        document.body.appendChild(clone);

        setTimeout(() => {
            clone.remove();
        }, 1000);
    }

    // Add wave animation on mouse position
    document.addEventListener('mousemove', function(e) {
        if (document.activeElement === newsletterInput) {
            createWave(e.clientX, e.clientY);
        }
    });

    // Cleanup
    newsletterInput.addEventListener('blur', () => {
        wave.remove();
    }, { once: true });
});

                    // Add wave animation on mouse position
                    document.addEventListener('mousemove', function(e) {
                        if (document.activeElement === newsletterInput) {
                            createWave(e.clientX, e.clientY);
                        }
                    });
                    
                    // Cleanup
                    newsletterInput.addEventListener('blur', () => {
                        wave.remove();
                    }, { once: true });
                });
                
                // Add wave animation CSS
                const style = document.createElement('style');
                style.textContent = `
                    @keyframes wave {
                        0% { transform: translate(-50%, -50%) scale(1); opacity: 0.5; }
                        100% { transform: translate(-50%, -50%) scale(20); opacity: 0; }
                    }
                `;
                document.head.appendChild(style);
            });
        </script>
